<Window x:Class="Crud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="295*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Name="btnRead" Content="Read" Height="50" Margin="5" Click="BtnRead_Click"/>
            <Button Name="Add" Height="50" Content="Add" Margin="5" Click="Add_Click"/>
            <Button Name="btnUpdate" Height="50" Content="Update" Margin="5" Click="BtnUpdate_Click"/>
            <Button Name="btnRemove" Height="50" Content="Remove" Margin="5" Click="BtnRemove_Click"/>
        </StackPanel>
        <DataGrid Grid.Column="1" Name="dgFilms">
            
        </DataGrid>
    </Grid>
</Window>
